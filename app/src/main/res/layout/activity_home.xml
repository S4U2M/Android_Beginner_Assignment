<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/background"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conslay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="환영합니다!"
        android:textSize="40dp"
        android:textColor="#959595"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gundamImg"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/gundam03"
        tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/gundamImg"
            android:clickable="true"

            >


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textStyle="bold"
                android:textColor="#959595"
                android:layout_marginStart="30dp"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/nameInprfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="#959595"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textStyle="bold"
                android:textColor="#959595"
                android:layout_marginStart="30dp"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/ageInprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="age"
                android:textColor="#959595"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textStyle="bold"
                android:textColor="#959595"
                android:textSize="22dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/genderInprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gender"
                android:textSize="20dp"
                android:textColor="#959595"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBTI"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#959595"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/mbtiInprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBTI"
                android:textColor="#959595"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취미"
                android:textColor="#959595"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/hobbyInprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hobby"
                android:textSize="20dp"
                android:textColor="#959595"
                android:gravity="center"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_close_profile"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_btn"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="종료"
                    android:textSize="30dp"
                    android:textColor="#959595"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:src="@drawable/icon_sate" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
